<h1>Listing receipts</h1>

<table>
  <tr>
    <th>Receiver</th>
    <th>Receiver type</th>
    <th>Message</th>
    <th>Read</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @receipts.each do |receipt| %>
  <tr>
    <td><%= receipt.receiver_id %></td>
    <td><%= receipt.receiver_type %></td>
    <td><%= receipt.message_id %></td>
    <td><%= receipt.read %></td>
    <td><%= link_to 'Show', receipt %></td>
    <td><%= link_to 'Edit', edit_receipt_path(receipt) %></td>
    <td><%= link_to 'Destroy', receipt, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

