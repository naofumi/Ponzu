<h1><%= t('users.login') %></h1>
<div id="form_box">
  <%= form_for @user, :url => update_name_user_path(@user), :method => :put do |form| %>
    <% if @user.errors.any? %>
      <div id="error_explanation" style="color:#F66">
        <h2><%= pluralize(@user.errors.count, "error") %>:</h2>

        <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <div style="color:#ff8000">
      <h1>Welcome!</h1>
      <p>まずは名前を入力してください。</p>
      <p>Please enter your name to proceed.</p>
    </div>
    <p>
      <div>Registration ID</div>
      <%= @user.registrant && @user.registrant.registration_id %>
    </p>
    <p>
      <div>Japanese Name</div>
      <%= form.text_field :jp_name, :placeholder => "Name in Japanese", :class => "login_field" %>
    </p>
    <p>
      <div>English Name</div>
      <%= form.text_field :en_name, :placeholder => "Name in English", :class => "login_field" %>
    </p>
    <p style="text-align:right;">
      <%= form.submit "Let's Go!", :class => "submit_button" %>
    </p>
    <%= t('users.imode_cookie_warning') %>
    <p>
      Having problems? Please contact<br />
      <a href='ma&#105;lto&#58;m%62s&#106;&#51;&#53;&#64;&#99;&#37;6&#70;%&#54;&#69;v%6&#53;n%7&#52;&#105;&#37;6Fn&#46;co&#46;&#106;p'>&#109;bsj35&#64;con&#118;en&#116;io&#110;&#46;co&#46;jp</a> or <a href="http://twitter.com/mbsj2012it">@mbsj2012it (Twitter)</a>
    </p>
    <p>
      <%= link_to "Use without logging-in >>", root_path %>
    </p>
  <% end %>
</div>
<div style="text-align:center;font-size:14px;margin-top:20px;color:#999">
  powered by <%= image_tag "logo_for_black.png", :style => "width:200px;vertical-align:middle" %>
</div>
