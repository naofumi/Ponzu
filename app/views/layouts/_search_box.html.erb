<div class="search_box">
	<%= form_tag search_index_path, :method => :get, :'data-ks_get_form' => "", :class => 'search_form' do %>
    <%= button_tag "Search", :disable_with => "searching...", :type => 'submit', :class => "button big icon search" %>
    <div class="field_box">
  		<%= text_field_tag :query, params[:query], :placeholder => t('search_field'), :autocomplete => 'off' %>
    </div>
	<% end %>
</div>