%h1= @with.name
%div
  = render :partial => "form"

  .message_thread
    - @receipts.each do |r|
      = time_in_list_for r
      - css_class = ['message']
      - if r.message.sender_id == current_user.id
        - css_class += ['pink']
      - elsif
        - css_class += ['blue']
      %div{ :class => css_class }
        = r.message.body
      %div{:style => "clear:both"}
  = ks_will_paginate @receipts
