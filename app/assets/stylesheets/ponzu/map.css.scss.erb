$pin_padding: 100px;
$left_offset: 36px;
$top_offset: 86px;
$image_width: 122px;
$image_height: 92px;

.map {
  position:relative;
}
.pushpin {
  position:absolute;
  z-index: 10;
  width: $image_width;
  height: $image_height;
  padding: $pin_padding;
  margin: 0;
  margin-top: -($top_offset + $pin_padding);
  margin-left: -($left_offset + $pin_padding);

}

.move_pin {
  -webkit-animation-name: movepin;
  -webkit-animation-duration: 0.5s;
  -webkit-transition-timing-function: ease;
}

@-webkit-keyframes movepin {
  from {
    -webkit-transform: translate(80px, -100px);
  }
  70% {
    -webkit-transform: translate(0px, 0px);    
  }
  85% {
    -webkit-transform: translate(20px, -25px);
  }
  90% {
    -webkit-transform: translate(0px, 0px);
  }
  95% {
    -webkit-transform: translate(5px, -7.5px);
  }
  to {
    -webkit-transform: translate(0px, 0px);
  }
}