<% self.extend PonzuHelper %>
<%= scss_color_palette %>
@import "../kamishibai/ks_settings";

.presentation {
  &.liked, &.scheduled {
    background-repeat: no-repeat;
    background-position: right 30px;
    background-size: 60px 60px;
  }
  &.liked {
    background-image: image-url('ponzu/like_256.png');
  }
  &.scheduled {
    background-image: image-url('ponzu/clock_256.png');
  }
  .presentation_header {
  }
  .time {
    font-size: $reading-font-size;
    float:right;
    white-space: nowrap;
  }

  .number {
    font-weight: bold;
    color: $mbsj_dark_pink;
    font-size: $label-font-size;  
    .same_presentations {
      font-size: $smaller-font-size;
    }
  }

  // This is used inside lists
  .title {
    clear:both;
    font-size: $reading-font-size;
    font-weight: bold;
  }
  .authors, .institutions, .in_categories {
    font-size: $smaller-font-size;
    margin-top: 5px;
  }
  
  .institutions {
    font-style: italic;
    padding-left: 0.5em;
    text-indent: -0.5em;
  }

  .in_categories {
    padding-left: 10px;
  }

  .in_categories {
    .category_title {
      font-weight: bold;
      color: #888888;
    }
  }

  .pdf_links {
    float:right;
  }
  #comments {
    textarea{
      width: 95%; 
      height: 80px; 
      font-size: 16px
    }
    .comment {
      .comment_header {
        a {
          font-weight: bold;
        }
        .time_box {
          float: right;
        }
        margin-bottom: 5px;
      }
      .close_box {
        text-align: right;
      }
      margin-bottom: 10px;
      &.depth_1 {
        margin-left: 20px;
      }
      &.depth_2 {
        margin-left: 40px;
      }
      &.depth_3 {
        margin-left: 60px;
      }
      &.depth_4 {
        margin-left: 80px;
      }

    }
  }
  #abstract {
    margin-bottom: 10px;
  }
  .corresponding_email {
    margin-left: 10px;
    font-size: 14px;
  }
  .speech_language {
    margin-left: 10px;
    font-size: 14px;
  }
}

.paneled_list .presentation {
  .number {
    font-size: 16px;
  }  
}

.prev_next_navigation {
  float:right;
  .arrow {
    display: inline-block;
    height: 40px;
    width: 40px;
    background-size: contain;
    &.right {
      background-image: image-url('ponzu/right-maroon.png');
    }
    &.left {
      background-image: image-url('ponzu/left-maroon.png');
    }
  }
}

.session_header {
  .number {
    float:left;
    font-size: 20px;
    color: $mbsj_dark_pink;
    font-weight: bold;
    // Has to be at least as high as the adjacent buttons
    // for float to work on small screens.
    height: 40px;
  }
  .time, .room{
    float:right;
    margin-left: 5px;
  }
  .title {
    font-size: $label-font-size;
    clear:both;
    font-weight: bold;
  }
}

.text {
  -webkit-column-count: 2;
  -webkit-column-gap: 20px;
  -webkit-column-rule: none;
  -webkit-hyphens: auto;
  -moz-column-count: 2;
  -moz-column-gap: 20px;
  -moz-column-rule: none;
  -moz-hyphens: auto;
  column-count: 2;
  column-gap: 20px;
  column-rule: none;
  hyphens: auto;
  text-align: justify;
  p {
    margin-top: 0px
  }
}

// Allow booths and ads and art to be more flexibile with design
.presentation_ad .text, .presentation_booth .text,
.presentation_art .text {
  -webkit-column-count: 1;
  -moz-column-count: 1;
  column-count: 1;
}

.pdf_list .number {
  color: $mbsj_dark_pink;
  font-weight: bold;
  margin-right: 10px;
}

.chairs {
  font-size: 14px;
  div {
    display: inline-block;
  }
  .label {
    color: $mbsj_dark_pink;
    font-size: 13px;
    vertical-align: top;
  }
}

.summary_description {
  margin-top: 10px;
  img {
    max-width: 100%;
  }
}
.show_summary_button_wrapper {
  text-align:right;
  display: none;
}

.heart {
  width: 16px;
  background-image: image_url('ponzu/heart.png');
}

.club_in {
  width: 20px;
  background-image: image_url('ponzu/club_in.png');
}

.club_out {
  width: 20px;
  background-image: image_url('ponzu/club_out.png');
}

.heart, .club_in, .club_out {
  display: none;
  background-repeat: no-repeat;
}
.looking_for_job {
  .club_out {
    display: inline-block;
  }
}

.looking_for_partner {
  .heart {
    display: inline-block;
  }
}

.looking_for_person {
  .club_in {
    display: inline-block;
  }
}

// ART
.paneled_list {
  .presentation_art {
    margin-left: 120px;
    min-height: 100px;
  }
  .thumb {
    width:100px;
    position:absolute;
    top:10px;
    left:0;
  }
}

