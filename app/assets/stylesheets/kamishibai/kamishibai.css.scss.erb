/*
 * This file contains the css to make Kamishibai work.
 * Animations and effects are included, but themes are not.
 *
*/
@import "ks_settings";

html, body, .page {
  min-width: 100%;
  min-height: 100%;
  margin: 0;
  padding: 0;
}

.page {
  position: absolute;
}

.was_clicked_indicator {
  animation: was_clicked_animation 2s;
  -webkit-animation: was_clicked_animation 2s;
  -moz-animation: was_clicked_animation 2s;
}

@keyframes was_clicked_animation {
  0% { background-color: $was_clicked;}
  100% { background-color: none;}
}

@-webkit-keyframes was_clicked_animation {
  0% { background-color: $was_clicked;}
  100% { background-color: none;}
}

@-moz-keyframes was_clicked_animation {
  0% { background-color: $was_clicked;}
  100% { background-color: none;}
}

.css_glow_transition {
  animation: css_glow_animation 2s;
  -webkit-animation: css_glow_animation 2s;
  -moz-animation: css_glow_animation 2s;  
}

@keyframes css_glow_animation {
  0% { box-shadow: 0 0 20px 10px yellow inset;}
  100% { box-shadow: none;}
}

@-webkit-keyframes css_glow_animation {
5  0% { box-shadow: 0 0 20px 10px yellow inset;}
  100% { box-shadow: none;}
}

@-moz-keyframes css_glow_animation {
  0% { box-shadow: 0 0 20px 10px yellow inset;}
  100% { box-shadow: none;}
}

.css_pulse_transition {
  animation: css_pulse_animation 1s;
  -webkit-animation: css_pulse_animation 1s;
  -moz-animation: css_pulse_animation 1s;
}

@keyframes css_pulse_animation {
  0% { transform: scale(1.0); }
  20% { transform: scale(0.95); }
  100% { transform: scale(1.0); }
}

@-webkit-keyframes css_pulse_animation {
  0% { -webkit-transform: scale(1.0); }
  20% { -webkit-transform: scale(0.95); }
  100% { -webkit-transform: scale(1.0); }
}

@-moz-keyframes css_pulse_animation {
  0% { -moz-transform: scale(1.0); }
  20% { -moz-transform: scale(0.95); }
  100% { -moz-transform: scale(1.0); }
}

.css_pulse {
  animation: css_pulse_animation 1s;
  -webkit-animation: css_pulsate 1s linear 1s infinite normal none;
  -moz-animation: css_pulse_animation 1s;  
}

@-webkit-keyframes css_pulsate {
  0% { -webkit-transform: scale(1.0); }
  20% { -webkit-transform: scale(0.8); }
  100% { -webkit-transform: scale(1.0); }
}
